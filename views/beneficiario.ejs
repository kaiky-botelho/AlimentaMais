<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Beneficiário</title>
    <link rel="stylesheet" href="/css/cadastro.css">
</head>

<body>
    <div class="container">
        <form action="/cadastroBeneficiario" method="POST" id="formCadastro">
            <!-- Div de Informações Pessoais -->
            <div class="input-container">
                <div class="info-pessoais" id="info-pessoais">
                    <h2>CADASTRO - BENEFICIÁRIO</h2>
                    <h3>INFORMAÇÕES PESSOAIS</h3>
                    <input type="text" id="nome" name="nome" placeholder="Nome Completo do Responsável">
                    <input type="text" id="benef_documento" name="benef_documento" placeholder="CPF do Responsável">
                    <div class="div-input">
                        <input type="text" id="benef_telefone" name="benef_telefone" placeholder="Telefone">
                        <input type="date" id="benef_data_nasc" name="benef_data_nasc">
                    </div>
                    <div class="emailSenha">
                        <input type="email" id="benef_email" name="benef_email" placeholder="E-mail">
                        <div class="password-container">
                        <input type="password" id="benef_senha" name="benef_senha" placeholder="Senha">
                            <span id="toggle-password" class="eye-icon">
                              <!-- Ícone de olho fechado -->
                              <i id="eye-closed" class="fas fa-eye-slash"></i>
                              <!-- Ícone de olho aberto -->
                              <i id="eye-open" class="fas fa-eye" style="display:none;"></i>
                            </span>
                          </div> 
                    </div>
                    <div class="div-input-renda">
                        <select name="qtd_familiares" id="qtd_familiares">
                            <option value="qtd_familiares">Qtde Membro</option>
                            <option>1 a 3</option>
                            <option>4 ou mais</option>
                        </select>
                        <select name="renda" id="rendaFamiliar">
                            <option value="renda">Renda Familiar</option>
                            <option>Até 1 Salário Mínimo</option>
                            <option>2 ou mais</option>
                        </select>
                        <label class="upload-btn">
                            Enviar Comprovante
                            <img src="/img/upload-cloud.png" alt="">
                            <input type="file" name="comprovante" id="comprovante">
                        </label>
                    </div>
                    <button type="button" id="button">PRÓXIMO</button>
                </div>
                <!-- Div de Endereço -->
                <div class="endereco" id="endereco">
                    <h2>CADASTRO - BENEFICIÁRIO</h2>
                    <h3>ENDEREÇO</h3>
                    <div class="input-div-endereco">
                        <input class="menor" type="text" id="benef_cep" name="benef_cep" placeholder="CEP"
                            onblur="buscaCep(this.value)">
                        <input class="maior" type="text" id="benef_cidade" name="benef_cidade" placeholder="Cidade">
                        <input class="menor" type="text" id="benef_UF" name="benef_UF" placeholder="Estado">
                    </div>
                    <input type="text" id="benef_endereco" name="benef_endereco" placeholder="Endereço">
                    <div class="input-div-endereco">
                        <input class="menor" type="text" id="benef_numero" name="benef_numero" placeholder="Nº">
                        <input class="maior" type="text" id="benef_bairro" name="benef_bairro" placeholder="Bairro">
                        <input class="menor" type="text" id="benef_complemento" name="benef_complemento"
                            placeholder="Complemento">
                    </div>
                    <div class="buttons">
                        <button type="button" id="button-voltar" class="voltar">VOLTAR</button>
                        <button type="submit">CADASTRAR</button>
                    </div>
                </div>
                <div class="img-container">
                    <img class="logo" src="/img/LogoV4.png" alt="">
                    <p>CADASTRE SUAS INFORMAÇÕES</p>
                    <img class="cadastro" src="/img/imgCadastro.png" alt="">
                </div>
            </div>

        </form>
    </div>
    </script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
    <script src="/js/formBenef.js"></script>
    <script src="js/ocultaSenha.js"></script>

</body>

</html>
